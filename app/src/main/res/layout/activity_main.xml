<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/colorAccent"
    tools:context="com.example.admin.homework3__calculator.MainActivity">

    <TextView
        android:id="@+id/displayMath"
        android:layout_width="366dp"
        android:layout_height="263dp"
        android:gravity="right"
        android:text="0"
        android:textStyle="bold"
        tools:textSize="40sp" />

    <GridLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:paddingLeft="18dip"

        android:rowCount="5">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textStyle="bold"
            android:onClick="displayCharacter"
            tools:textColor="@android:color/holo_red_light"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/buttonSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            tools:textSize="20sp" />

        <Button
            android:id="@+id/buttonPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:onClick="displayCharacter"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:onClick="displayCharacter"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:onClick="displayCharacter"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="8"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="9"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="X"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="4"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="5"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="6"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="-"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="1"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="2"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="3"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="+"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/buttonDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="."
            tools:textSize="20sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="0"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/buttonNegation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="+/-"
            tools:textSize="20sp" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="displayCharacter"
            android:text="="
            android:textStyle="bold"
            tools:background="@android:color/holo_green_light"
            tools:textSize="20sp" />
    </GridLayout>


</LinearLayout>
